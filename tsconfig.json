{
  "include": ["src/**/*"],
  "exclude": ["**/*.test.ts"],

  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "checkJs": true,
    "esModuleInterop": true,
    "declaration": true,

    "moduleResolution": "Bundler",
    "module": "preserve",

    "outDir": "./dist"
  },

  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "2.0.0"
}
